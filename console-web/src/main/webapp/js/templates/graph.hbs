        <div class="btn-group" data-toggle="buttons-radio">
            <button type="button" class="btn btn-primary" data-id="messages">Messages</button>
            <button type="button" class="btn btn-primary" data-id="times">Times</button>
        </div>
    </div>
    <div class="span6">
        <div class="btn-group pull-right" data-toggle="buttons-radio" data-id="messages-modes">
