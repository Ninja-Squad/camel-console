            <button type="button" class="btn" data-id="messages-failures">Failures</button>
            <button type="button" class="btn" data-id="messages-both">Both</button>
        </div>
        <div class="btn-group pull-right" data-toggle="buttons-radio" data-id="times-modes">
            <button type="button" class="btn" data-id="times-average">Average</button>
            <button type="button" class="btn" data-id="times-minimum">Minimum</button>
            <button type="button" class="btn" data-id="times-maximum">Maximum</button>
            <button type="button" class="btn" data-id="times-all">All</button>
